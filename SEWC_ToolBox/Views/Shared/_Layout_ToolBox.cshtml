                layer.alert('@Html.Lang("txt_CopyReporkLinkSucess")', { btn: ['@Html.Lang("txt_Ok")'], title: '@Html.Lang("txt_Info")'})
            });

            clipboard.on('error', function (e) {
                console.error('Action:', e.action);
