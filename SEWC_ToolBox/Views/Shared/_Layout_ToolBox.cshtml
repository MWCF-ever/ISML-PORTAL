                            $("#searchInput").val(searchstr);
                            window.location.href = preUrltxt + "/SSML/search?searchtxt=" + searchstr;
                        }
                    }
                });
            })
            var clipboard = new ClipboardJS('.btn_copy_report');
            clipboard.on('success', function (e) {
